<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:SubverseIM.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SubverseIM.Views.Pages.MessagePageView"
			 x:DataType="vm:MessagePageViewModel">
	<Design.DataContext>
		<vm:MessagePageViewModel />
	</Design.DataContext>
	<DockPanel>
		<Button DockPanel.Dock="Top"
					HorizontalAlignment="Stretch"
					Command="{Binding BackCommandAsync}">
			<TextBlock HorizontalAlignment="Center" >Back to Contacts</TextBlock>
		</Button>
		<Button DockPanel.Dock="Top"
					HorizontalAlignment="Stretch"
					Command="{Binding EditCommandAsync}">
			<TextBlock HorizontalAlignment="Center" >Edit this Contact</TextBlock>
		</Button>
		<Button DockPanel.Dock="Top"
					HorizontalAlignment="Stretch"
					Command="{Binding DeleteCommandAsync}">
			<TextBlock HorizontalAlignment="Center" >Delete Full Conversation</TextBlock>
		</Button>
		<DockPanel DockPanel.Dock="Top" Height="64">
			<Button DockPanel.Dock="Right"
					VerticalAlignment="Stretch"
					Command="{Binding SendCommandAsync}">
				<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Send</TextBlock>
			</Button>
			<TextBox HorizontalAlignment="Stretch" 
					 VerticalAlignment="Stretch" 
					 AcceptsReturn="True" 
					 Watermark="Write a message..." 
					 Text="{Binding SendMessageText}" />
		</DockPanel>
		<ListBox ItemsSource="{Binding MessageList}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<DockPanel>
						<TextBlock 
							DockPanel.Dock="Left" 
							VerticalAlignment="Top" 
							Text="{Binding DateString}" 
							Margin="2" />
						<DockPanel>
							<TextBlock DockPanel.Dock="Top" 
									   Text="{Binding FromName}" 
									   Margin="1"/>
							<TextBlock Text="{Binding Content}" Margin="2" />
						</DockPanel>
					</DockPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</UserControl>
