<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:SubverseIM.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SubverseIM.Views.Pages.TorrentPageView"
			 x:DataType="vm:TorrentPageViewModel">
	<Design.DataContext>
		<vm:TorrentPageViewModel />
	</Design.DataContext>
	<ListBox ItemsSource="{Binding Torrents}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<DockPanel>
					<TextBlock DockPanel.Dock="Top" Text="{Binding DisplayName}" />
					<Button DockPanel.Dock="Right" Command="{Binding StopCommandAsync}" IsEnabled="{Binding IsStarted}">
						Stop Download
					</Button>
					<Button DockPanel.Dock="Right" Command="{Binding StartCommandAsync}" IsEnabled="{Binding !IsStarted}">
						Start Download
					</Button>
					<ProgressBar Value="{Binding DownloadProgress}" />
				</DockPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</UserControl>
